#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"


echo "\n 🔵 Lenskart UI LIbrary ⌛ : Checking branch name ⏳ "

BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(prod|pre-prod|base)"

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
	echo "\n 🔴 Cannot push to remote $BRANCH branch, please create your own branch and use PR.🚫 "&& exit 1
fi

echo " \n 🔵 Lenskart  UI LIbrary  ⌛ : Finish checking branch name ✅"

exit 0
